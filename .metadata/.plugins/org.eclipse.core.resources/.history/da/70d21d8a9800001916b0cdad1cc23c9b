package mapaProjecao;

import java.util.Scanner;

public abstract class MapaProjecao {

	private float coordX;
	private float coordY;

	public MapaProjecao(float coordX, float coordY) {
		this.coordX = coordX;
		this.coordY = coordY;
	}

	

	public float getCoordX() {
		return coordX;
	}



	public void setCoordX(float coordX) {
		this.coordX = coordX;
	}



	public float getCoordY() {
		return coordY;
	}



	public void setCoordY(float coordY) {
		this.coordY = coordY;
	}



	// Método de Cálculo - Será reimplementado por outras classes
	public float calcularDistancia(float x1, float x2, float y1, float y2) throws Exception {
		throw new Exception("Chamada na classe mãe não permitida!!");
	}

}
